   @bindir@/publisher --config $target CO-PUB/1.0
}

_run-fileserver() {

}

command=
for alias in $aliases; do
    if test "$alias" = "$0"; then
	command=$0
	break
    fi
done

if test -z "$command"; then
    _usage
    exit 1
fi

_$command

exit 0
