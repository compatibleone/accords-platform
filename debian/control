Package: compatibleone-accords
Architecture: all
Section: net
Depends: compatibleone (>= ${binary:Version}),  compatibleone-base (>= ${binary:Version}), compatibleone-azprocci (>= ${binary:Version}),  compatibleone-broker (>= ${binary:Version}),  compatibleone-cool (>= ${binary:Version}),  compatibleone-coees (>= ${binary:Version}),  compatibleone-copaas (>= ${binary:Version}),  compatibleone-cops (>= ${binary:Version}),  compatibleone-coips (>= ${binary:Version}),  compatibleone-comons (>= ${binary:Version}),  compatibleone-conets (>= ${binary:Version}),  compatibleone-coobas (>= ${binary:Version}),  compatibleone-cosacs (>= ${binary:Version}),  compatibleone-cosched (>= ${binary:Version}), compatibleone-coeasy (>= ${binary:Version}), compatibleone-coss (>= ${binary:Version}), compatibleone-cnprocci (>= ${binary:Version}), compatibleone-eziprocci (>= ${binary:Version}), compatibleone-dcprocci (>= ${binary:Version}),  compatibleone-ezvm (>= ${binary:Version}),  compatibleone-fileserver (>= ${binary:Version}),  compatibleone-onprocci (>= ${binary:Version}),  compatibleone-osocciprocci (>= ${binary:Version}),  compatibleone-osprocci (>= ${binary:Version}),  compatibleone-procci (>= ${binary:Version}),  compatibleone-publisher (>= ${binary:Version}),  compatibleone-paasprocci (>= ${binary:Version}),  compatibleone-slam (>= ${binary:Version}), compatibleone-accords-doc
